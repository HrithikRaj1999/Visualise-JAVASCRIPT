{
  "name": "js-visualizer-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "npm run dev -w @jsv/web",
    "dev:server": "npm run dev -w @jsv/server",
    "build": "npm run build -ws",
    "test": "npm run test -ws",
    "test:phase1": "npm run test:phase1 -w @jsv/protocol && npm run test:phase1 -w @jsv/explain",
    "test:phase2": "npm run test:phase2 -w @jsv/web",
    "test:phase3": "npm run test:phase3 -w @jsv/server",
    "test:phase4": "npm run test:phase4 -w @jsv/web",
    "deploy:web": "node scripts/deploy-web.mjs",
    "deploy:server": "node scripts/render-service.mjs deploy",
    "deploy:server:status": "node scripts/render-service.mjs status",
    "deploy:server:start": "node scripts/render-service.mjs start",
    "deploy:server:stop": "node scripts/render-service.mjs stop",
    "deploy:stop": "npm run deploy:server:stop",
    "lint": "npm run lint -ws",
    "lint:all": "npm run lint -ws",
    "test:all": "npm run test -ws"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.6.3"
  }
}
